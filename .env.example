# ===============================================
# ELECTRICAL ESTIMATION APP - ENVIRONMENT CONFIG
# ===============================================

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=generate-secure-key-with-secrets-token-hex-32
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///app.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_FILE_SIZE=10485760

# AI Service Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# JWT Configuration
JWT_SECRET_KEY=generate-jwt-secret-with-secrets-token-hex-32
JWT_EXPIRATION_HOURS=24

# Redis Configuration (for caching and background jobs)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api
VITE_APP_TITLE=Electrical Estimation App

# Database Configuration for Docker
DB_USER=estimation_user
DB_PASSWORD=secure_password_change_in_production
DB_NAME=estimation_db

# Monitoring Configuration
GRAFANA_PASSWORD=admin